cat > INPUT_ORG <<EOF_ORG
 &LMGRID
  startlat_tot  = -12.26,
  startlon_tot  = -70.115,
  pollat=90.0, pollon=-180.0,
  dlon=0.11, dlat=0.11,
  ie_tot= 551, je_tot= 361, ke_tot=60,
 /END
 &RUNCTL
  dt=${DT},
  hstart=${LM_NL_HSTART},   hstop=${LM_NL_HSTOP},
  ydate_ini='${LM_YYYY_INI}${LM_MM_INI}${LM_DD_INI}${LM_ZZ_INI}0000',
  hincmxt=24.0,
  hincmxu=24.0,
  itype_timing=4,
  lreproduce=.TRUE.,
  luseobs =.FALSE.,
  lphys   =.TRUE.,
  ldiagnos=.FALSE.,
  ldfi=.FALSE.,
  nprocx=${NPX}, nprocy=${NPY}, nprocio=${NPIO},
  nboundlines=3,
  ldump_ascii = .FALSE.,
  luse_rttov = .FALSE.,
  idbg_level = 1,
  ldebug_dyn = .TRUE.,
  ldebug_rad = .FALSE.,
  ldebug_tur = .FALSE.,
  ldebug_con = .TRUE.,
  ldebug_io = .TRUE.,
  ldebug_ass = .FALSE.,
  l_t_check = .FALSE.,
  nproma=-1,
 /END
 &TUNING
   tkhmin = 0.4,
   tkmmin = 0.4,
   mu_rain = 0.5,
   v0snow = 20.0,
   rlam_mom=0.0,
   rlam_heat = 0.5249,
   entr_sc = 0.000186,
   rat_sea=20.0,
   rat_lam=1.0,
   rat_can=1.0,
   wichfakt=0.0,
   c_lnd=2.0,
   c_sea=1.5,
   c_soil=1.0,
   pat_len=500.0,
   z0m_dia=0.2,
   crsmin=150.0,
   clc_diag=0.5,
   qc0=0.0
   uc1 = 0.0626,
   radfac = 0.5,
   fac_rootdp2 = 1.0,
   soilhyd = 1.62,
   tur_len = 500.0,
 /END
EONL
EOF_ORG


cat > INPUT_PHY <<EOF_PHY
 &PHYCTL
  lgsp=.TRUE.,
      itype_gscp=4,
      ldiniprec=.FALSE.,
  lrad=.TRUE.,
      hincrad = 1.,
  lforest=.TRUE.,
  ltur=.TRUE.,
      ninctura=1,
      ltmpcor=.false.,
      lprfcor=.false.,
      lnonloc=.false.,
      lcpfluc=.false.,
      itype_turb=3,
      imode_turb=1,
      itype_tran=2,
      imode_tran=1,
      limpltkediff=.TRUE.,
    itype_wcld=2,
      icldm_rad=4,
      icldm_turb=2,
      icldm_tran=0,
      itype_synd=2,
    lsoil=.TRUE.,
      lmelt=.TRUE.,
      lmelt_var=.TRUE.,
      lmulti_layer=.TRUE.,
      itype_root = 2
      itype_heatcond=2
      itype_evsl=4,
      itype_trvg=2,
      itype_hydmod=1,
      itype_hydcond=1,
      ke_soil=9,
      czml_soil=0.005, 0.025, 0.07, 0.16, 0.34, 0.70, 1.47, 2.86, 5.74,  11.50,
      czbot_w_so=8.0,
      lsoil_init_fill=.TRUE.,  !!!!!!!!!!!!!! Saturate low soil levels; Use only in first month of simualt
    lconv=.FALSE.,  !.TRUE.,
      itype_conv=3, !0,
      nincconv=5,
    lcape=.false.,
      lconf_avg=.true.,
        lradtopo=.false.,
    lsso=.true.,
    lseaice=.false.,
    itype_aerosol = 2,
    itype_albedo = 2,
 /END
EOF_PHY

cat > job <<EOF_job_SLURM
#!/bin/bash
#SBATCH --job-name=lm_c_atl
#SBATCH --output=job.out
#SBATCH --nodes=${NNODES}
#SBATCH --ntasks-per-node=${TASKS_PER_NODE}
#SBATCH --partition=${QUEUE}
#SBATCH --time=04:30:00
#SBATCH --account=${ACCOUNT}
EOF_job_SLURM
if [[ $HOST == daint* ]]; then
  sed -i '/account=/a\
#SBATCH --constraint=gpu' job
fi

if [ "${GPUS_PER_NODE}" -gt 0 ] ; then
  sed -i '/account=/a\
#SBATCH --gres=gpu:'${GPUS_PER_NODE} job
fi

# rest of job (actual work)
cat >> job <<EOF_job

# Initialization
set verbose
st echo
#module load daint-gpu
# set environmental parameters
setenv OMP_NUM_THREADS 1
setenv COSMO_NPROC_NODEVICE ${NPIO_LMC}
setenv MALLOC_MMAP_MAX_ 0
setenv MALLOC_TRIM_THRESHOLD_ 536870912
setenv MV2_ENABLE_AFFINITY 0
setenv MV2_USE_CUDA 1
setenv MPICH_RDMA_ENABLED_CUDA 1
setenv MPICH_G2G_PIPELINE 256
setenv CRAY_CUDA_PROXY 0
setenv CUDA_VA_RESERVATION_CHUNK_SIZE 4294967296





#unlimit
#limit
# cleanup
./clean

# echo date
date

# Run LM in case directory
${RUNCMD} -u -n ${NTASKS} ${EXE}

if [[  \$? -eq 0 ]]; then
    echo "simulation success"
    #python ../compress_minute_output.py 
else
    echo "simulation failed"
fi

# echo date
date

# do postprocessing
#cd ./output/
#../../bin/grc
#cd -

# remove job tag (if present)
\rm -f .jobid >&/dev/null

# done
#hook
#pwd
#cd ..
#python control_simulation.py
#./run_daint.sh
#sacct -j \$SLURM_JOB_ID --format=User,JobID,Jobname,partition,state,time,start,end,elapsed,MaxRss,MaxVMSize,nnodes,ncpus,nodelist,AveC
#PUFreq
EOF_job

# clean away old *.out files
\rm -f *.out 2>/dev/null

# submit job
if [ -z "${WAITFORJOB}" ]; then
  jobid=`sbatch -C gpu job | sed 's/Submitted batch job //g'`
else
  jobid=`sbatch -C gpu --dependency=after:${WAITFORJOB} job | sed 's/Submitted batch job //g'`
fi

if [ $? -eq 0 -a -n "${jobid}" ]; then
  echo "${jobid}" > .jobid
  echo "${jobid}"
else
  exit 1
fi
