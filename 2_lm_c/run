  l_z_filter=.FALSE.,l_p_filter=.FALSE.,
  l_fi_pmsl_smooth = .FALSE.,
  ytunit='d',
 /END
 &GRIBOUT
  yform_write='ncdf',
  hcomb=$LM_NL_HSTART,$LM_NL_HSTOP,6,
!  yvarml='U', 'V', 'W',
  yvarml=' ',
  yvarpl='T','FI','RELHUM','U','V','W',
  plev = 200,500,700,850,
  yvarzl=' ',
  lcheck=.TRUE.,
  luvmasspoint=.FALSE.,
  lwrite_const=.FALSE.,
