#!/bin/bash

# setup defaults
[ -z "${NPX_LMC}"  ] && NPX=2             || NPX=${NPX_LMC}
[ -z "${NPY_LMC}"  ] && NPY=2             || NPY=${NPY_LMC}
[ -z "${NPIO_LMC}" ] && NPIO=0            || NPIO=${NPIO_LMC}
[ -z "${EXE_LMC}"  ] && EXE=lm_f90        || EXE=${EXE_LMC}
[ -z "$1"          ] && SCHEDULER="SLURM" || SCHEDULER="$1"
[ -z "$2"          ] && QUEUE="normal"   || QUEUE="$2"
[ -z "$3"          ] && ACCOUNT="pr94"     || ACCOUNT="$3"
[ -z "$4"          ] && WAITFORJOB=""     || WAITFORJOB="$4"

if [ -z "$CORES_PER_NODE" ] ; then
  echo "ERROR: need to specify CORES_PER_NODE"
  exit 1
fi

if [ -z "$TASKS_PER_NODE" ] ; then
  echo "ERROR: need to specify TASKS_PER_NODE"
  exit 1
fi

HOST=`hostname | sed 's/\..*$//g' | sed 's/[0-9]*$//g'`

# check scheduler
if [ "${SCHEDULER}" != "SLURM" ]; then
  echo "ERROR: unsupported scheduler (${SCHEDULER})"
  exit 1
fi

# compute derived variables

DT=90

STEP_6M=$((360/DT))

N_START=$((LM_NL_HSTART*60*60/DT))
N_STOP=$((LM_NL_HSTOP*60*60/DT))

NTASKS=`echo "${NPX}"'*'"${NPY}"'+'"${NPIO}" | bc`
NNODES=`python -c "from math import ceil; print(int(ceil(${NTASKS}.0/${TASKS_PER_NODE})))"`

# cleanup
#if [ -f .jobid ]; then
#  $(squeue -j `cat .jobid` &>/dev/null) && scancel `cat .jobid`
#  sleep 3
#  \rm .jobid 2>/dev/null
#fi
./clean

# setup namelists
cat > INPUT_ASS <<EOF_ASS
 &NUDGING
 /END
EOF_ASS
cat > INPUT_DIA <<EOF_DIA
 &DIACTL
  n0meanval=0, nincmeanval=1,
  itype_diag_t2m=1,
  itype_diag_gusts=1,
  lgplong =.TRUE.,   n0gp=0,      hincgp=1.,
  stationlist_tot= 0, 0, 46.817,  6.935, 'Payerne',
                   0, 0, 47.483,  8.533, 'Zurich-Kloten',
 /END
EOF_DIA
cat > INPUT_DYN <<EOF_DYN
 &DYNCTL
    lcpp_dycore=.TRUE.,
    lspubc=.true.,
    itype_spubc=3,
      rdheight=15500.0, !13500.0
      nrdtau=10,
    lexpl_lbc=.true.,
      rlwidth=85000.0,
    ldyn_bbc=.false.,
    itype_bbc_w=114,
    betasw=0.4,
    xkd=0.1,
    epsass=0.15,
    lcond=.true.,
    l_diff_smag = .TRUE.,
    lhordiff=.true.,
      itype_hdiff=2,
      hd_corr_u_bd=0.75,
      hd_corr_t_bd=0.75,
      hd_corr_trcr_bd=0.0,
      hd_corr_p_bd=0.75,
      hd_corr_u_in=0.0,
      hd_corr_t_in=0.0,
      hd_corr_trcr_in=0.0,
      hd_corr_p_in=0.0,
      hd_dhmax=250.,
    l2tls=.true.,
      irunge_kutta=1,
        irk_order=3,
        iadv_order=5,
        itheta_adv=0,
        ltadv_limiter=.false.,
      y_scalar_advect = 'BOTT2_STRANG',
      y_vert_adv_dyn='impl2',
        ieva_order=3,
    ldiabf_lh=.true.,
    itype_fast_waves=2,
    itype_outflow_qrsg=2,
    itype_lbc_qrsg=1,
 /END
EOF_DYN

cat > INPUT_INI <<EOF_INI
 &INICTL
  ndfi=2,
  tspan= 1840.0, taus= 1840.0,
  dtbak=40.0, dtfwd=40.0,
 /END
EOF_INI

cat > INPUT_SAT << EONL
 &SATCTL
   num_sensors=1,
   sat_input_01='MSG',1,'SEVIRI',8, .TRUE., .TRUE.,.TRUE., .TRUE.,
   nchan_input_01=1,2,3,4,5,6,7,8,
   lcon_clw=.TRUE.,
 /END
EONL

#output only fields that require no post-processing
cat > INPUT_IO <<EOF_IO
&IOCTL
  ldwd_grib_use=.false.,
  yform_read='ncdf',
  l_ke_in_gds=.TRUE.,
  lasync_io=.FALSE.,
  ymode_read = 'r  ',
  ymode_write = 'w b',
  nincwait=30,
  nmaxwait=180,
  nhour_restart=${LM_NL_HSTOP},${LM_NL_HSTOP},1
  ngribout=11,
  itype_gather=2,
  ydir_restart_in='./output/restarts'
  ydir_restart_out='./output/restarts'
  ytunit_restart='d',
  lbdclim=.TRUE.,
  yncglob_title = "CLM driven by ERAINT",
  yncglob_source = "cosmo_5.X_pompa",
  yncglob_experiment_id ="Evaluation_atlantic",
  ncglob_realization = 1,
 /END
 &DATABASE
 /END
 &GRIBIN
  lbdana=.FALSE.,
  ydirini='./input/',
  lchkini=.TRUE.,
  hincbound=3.0,
  ydirbd='./bc/',
  lchkbd =.TRUE.,
  lana_qi = .FALSE.,
  llb_qi  = .TRUE.,
  lana_qg = .FALSE.,
  llb_qg  = .FALSE.,
  lana_qr_qs = .FALSE.,
  llb_qr_qs  = .FALSE.,
  lana_rho_snow = .FALSE.,
  lan_lai = .TRUE., lan_rootdp = .TRUE., lan_vio3 = .TRUE., lan_plcov = .TRUE.,
  lan_t_cl = .TRUE.,  lan_w_cl = .TRUE., lan_hmo3 = .TRUE., lan_t_so0 = .TRUE.,
  lan_t_snow = .TRUE., lan_w_snow = .TRUE., lan_w_i = .TRUE., lan_rho_snow = .TRUE.,
  lan_t_s = .FALSE.,
  ytunitbd='d',
  /END
 &GRIBOUT
  yform_write='ncdf',
  hcomb=$LM_NL_HSTART,$LM_NL_HSTOP ,1,
  yvarml='U','V','W','T','PP',
     'QV','QC', 'QS','QR','QI','QG',
     'VIO3','HMO3',
     'T_SNOW','QV_S','W_SNOW','W_I','T_S',
     'T_SO','W_SO','RHO_SNOW','FRESHSNW',
  yvarpl=' ',
  yvarzl=' ',
  lcheck=.TRUE.,
  luvmasspoint=.FALSE.,
  lwrite_const=.True.,
  ydir='./output',
  l_z_filter=.FALSE., l_p_filter=.FALSE.,
  l_fi_pmsl_smooth = .FALSE.,
  ytunit='d',
 /END
 &GRIBOUT
  yform_write='ncdf',
  hcomb=$LM_NL_HSTART,$LM_NL_HSTOP,1,
  yvarml='CLCT','CLCH','CLCM','CLCL','ASHFL_S','ALHFL_S','ASOB_S','ASOB_T','ATHB_T','ATHB_S',
  yvarpl=' ',
  yvarzl=' ',
  lcheck=.TRUE.,
  luvmasspoint=.FALSE.,
  lwrite_const=.False.,
  ydir='./output/1h_second',
  l_z_filter=.FALSE.,l_p_filter=.FALSE.,
  l_fi_pmsl_smooth = .FALSE.,
  ytunit='d',
 /END
 &GRIBOUT
  yform_write='ncdf',
  hcomb=$LM_NL_HSTART,$LM_NL_HSTOP,1,
  yvarml='U_10M', 'V_10M', 'T_2M', 'QV_2M', 'RELHUM_2M', 'T_G', 'PS', 'TOT_PREC','RAIN_GSP', 'RAIN_CON', 'CAPE_ML', 'CIN_ML','HPBL',
  yvarpl=' ',
  yvarzl=' ',
  lcheck=.TRUE.,
  luvmasspoint=.FALSE.,
  lwrite_const=.FALSE.,
  ydir='./output/1h',
  l_z_filter=.FALSE.,l_p_filter=.FALSE.,
